{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~components/*": ["components/*"],
      "~hooks/*": ["hooks/*"],
      "~static/*": ["static/*"],
      "~~gql/*": ["~gql/*"],
      "~theme": ["theme/index"],
